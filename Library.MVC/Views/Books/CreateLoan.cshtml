@model Library.MVC.Models.LoanModels.LoanCreateVm;

@{
    ViewData["Title"] = "Create";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Loan</title>
</head>
<body>

    <h4>Loan</h4>
    <hr />



    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateLoan">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <dl>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LoanTime)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LoanTime)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ReturnTime)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ReturnTime)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.HiddenFor(model => model.BookCopyID)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.HiddenFor(model => model.BookCopy)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.HiddenFor(model => model.Delayed)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.HiddenFor(model => model.Fine)
                    </dd>
                </dl>
                <div class="form-group">
                    <label asp-for="MemberList" class="control-label">Användarlista: </label>
                    @Html.DropDownListFor(m => m.MemberID, Model.MemberList, "Välj låntagare")
                </div>
                <div class="form-group">
                    <input type="submit" value="Create loan" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
