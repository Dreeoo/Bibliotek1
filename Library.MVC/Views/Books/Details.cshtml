@model Library.MVC.Models.BookDetailsVm;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Copies</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Copies.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => model.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Title)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Author.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Copies[i])
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model.Copies">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </td>
            </tr>
        }
    </tbody>
</table>



