@model Library.MVC.Models.BookDetailsVm;

@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Edit">
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit book details</a> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<br />
<h4>Book Copies</h4>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Copy ID</th>
            <th>On loan</th>
        </tr>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Copies.Count; i++)
        {
        <tr>
            <td>
                @Html.DisplayFor(model => model.Title)
            </td>
            <td>
                @Html.DisplayFor(model => model.Copies[i].ID)
            </td>
            <td>
                @Html.DisplayFor(model => model.Copies[i].OnLoan)
            </td>
        </tr>
        }
    </tbody>
</table>



