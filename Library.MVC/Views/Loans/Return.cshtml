@model Library.MVC.Models.LoanModels.LoanReturnVm;

@{
    ViewData["Title"] = "Return";
}

<!DOCTYPE html>


    <h3>Are you sure you want to return this book?</h3>
    <div>
        <h4>Loan</h4>
        <hr />
        <form asp-action="Return">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LoanTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LoanTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReturnTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReturnTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Delayed)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Delayed)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Fine)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fine)
                </dd>
                <dd class="col-sm-10">
                    @Html.HiddenFor(model => model.Returned)
                </dd>
                <dd class="col-sm-10">
                    @Html.HiddenFor(model => model.MemberID)
                </dd>
                <dd class="col-sm-10">
                    @Html.HiddenFor(model => model.BookCopyID)
                </dd>
            </dl>

            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Return book" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
