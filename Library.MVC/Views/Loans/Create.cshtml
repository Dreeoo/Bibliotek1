@model Library.MVC.Models.LoanModels.LoanCreateVm;

@{
    ViewData["Title"] = "Create";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Loan</title>
</head>
<body>

    <h4>Loan</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LoanTime" class="control-label"></label>
                    <input asp-for="LoanTime" class="form-control" />
                    <span asp-validation-for="LoanTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReturnTime" class="control-label"></label>
                    <input asp-for="ReturnTime" class="form-control" />
                    <span asp-validation-for="ReturnTime" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Delayed" /> @Html.DisplayNameFor(model => model.Delayed)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Fine" class="control-label"></label>
                    <input asp-for="Fine" class="form-control" />
                    <span asp-validation-for="Fine" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MemberID" class="control-label"></label>
                    <select asp-for="MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create loan" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
